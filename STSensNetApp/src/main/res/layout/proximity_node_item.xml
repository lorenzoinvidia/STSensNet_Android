<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="8dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remoteIdLabel"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/proximity_icon"
            android:id="@+id/proximityIcon"
            android:layout_below="@id/remoteIdLabel"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/icon_margin"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/proximityValue"
            android:layout_alignTop="@id/proximityIcon"
            android:layout_alignBottom="@id/proximityIcon"
            android:gravity="center_vertical"
            android:layout_toEndOf="@+id/proximityIcon" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/proximityBar"
            android:layout_margin="8dp"
            android:layout_alignTop="@id/proximityIcon"
            android:layout_alignBottom="@id/proximityIcon"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/proximityValue" />

    </RelativeLayout>
</android.support.v7.widget.CardView>